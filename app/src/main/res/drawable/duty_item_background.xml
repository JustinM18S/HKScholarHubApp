<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4D000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="12dp"/> <!-- Rounded corners for the shadow -->
        </shape>
    </item>

    <!-- Background layer with gradient -->
    <item android:left="1dp" android:right="1dp" android:top="0dp" android:bottom="5dp"> <!-- Offset for drop shadow -->
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9"/> <!-- Background color -->

            <corners android:radius="12dp"/> <!-- Rounded corners -->

            <gradient
                android:startColor="#D9D9D9"
                android:endColor="#D9D9D9"
                android:angle="45"/>
        </shape>
    </item>

</layer-list>
