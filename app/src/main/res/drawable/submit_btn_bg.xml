<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#D0EED0"
                android:endColor="#A8D4A8"
                android:angle="270"/>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="4dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <!-- Button layer -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#A8D4A8"
                android:endColor="#88C488"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>
