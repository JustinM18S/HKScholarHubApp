<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the solid background color -->
    <solid android:color="#8EC885" /> <!-- Change this to any color you prefer -->

    <!-- Set the corner radius -->
    <corners android:radius="20dp" />

    <!-- Optional: Add a stroke (border) -->
    <stroke
        android:width="2dp"
        android:color="#8EC885" /> <!-- Change this to any color you prefer -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
