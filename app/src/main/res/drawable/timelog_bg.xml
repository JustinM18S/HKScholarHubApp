<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#8EC885" /> <!-- Use your desired color -->

    <!-- Corner radius -->
    <corners android:radius="30dp" />

    <!-- Optional: Add a border (stroke) -->
    <stroke
        android:width="10dp"
        android:color="#D9D9D9" /> <!-- Use your desired border color -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>